{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block pageContent %}
      <div class="col-12 offset-1">
           <h1>Edit Article</h1>
       </div>
       <div class="col-xl-6 button">
           {{ include('article/_form.html.twig', {'button_label': 'Update'}) }}
       </div>
       <div class="col-xl-6 button">
           {{ include('article/_delete_form.html.twig') }}
       </div>
       <div class="col-xl-6 button">
       <a href="{{ path('blog') }}" class="btn btn-outline-dark" role="button">back to list</a>
       </div>
    {% for message in app.flashes('notice') %}
        <div class="flash-notice alert alert-success alert-dismissible">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
