<form method="post" action="{{ path('article_delete', {'slug': article.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn btn-outline-dark button" role="button"">Delete</button>
</form>
{% for message in app.flashes('article_deleted') %}
    <div class="flash-notice alert alert-warning alert-dismissible fade show">
        {{ message }}
    </div>
{% endfor %}