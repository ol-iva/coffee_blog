{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block pageContent %}
    <h1>Category List</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outline-dark" role="button">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-dark" role="button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-outline-dark" role="button">Create new</a>
{% endblock %}
